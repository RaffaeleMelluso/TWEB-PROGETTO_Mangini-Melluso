<!--
    Error Page Template

    This template displays an error message when an unexpected issue occurs.
    It provides feedback to the user with a customizable error message
    and, if available, the error stack trace for debugging purposes.
-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Errore</title>

    <!-- Bootstrap for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/styles.css">
</head>
<body>

{{> navbar}}

<div class="container my-5 text-center">
    <!-- Error Heading -->
    <h1 class="display-4">Oops! Qualcosa Ã¨ andato storto.</h1>

    <!-- Dynamic Error Message -->
    <p class="text-muted">{{message}}</p>

    <!-- If available, display the error stack trace for debugging -->
    {{#if error}}
        <pre>{{error.stack}}</pre>
    {{/if}}

    <!-- Button to redirect users back to the homepage -->
    <a href="/" class="btn btn-primary mt-3">Torna alla Home</a>
</div>

{{> footer}}

</body>
</html>