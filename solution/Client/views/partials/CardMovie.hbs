<div class="card mb-3">
    <img src="{{image}}" class="card-img-top" alt="{{name}}">
    <div class="card-body">
        <h5 class="card-title">{{name}} ({{year}})</h5>
        <p class="card-text">{{description}}</p>
        <p class="card-text"><small class="text-muted">Rating: {{rating}}</small></p>
    </div>
</div>
