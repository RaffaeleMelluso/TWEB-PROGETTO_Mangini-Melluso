<div class="container my-5">
    <h2>Reviews</h2>
    {{#if reviews}}
        {{#each reviews}}
            <div class="review mb-4">
                <h5><a href="{{link}}" target="_blank">{{critic}}</a> {{#if topCritic}}<span class="badge bg-success">Top Critic</span>{{/if}}</h5>
                <p><strong>Rating:</strong> {{review_percentage}}%</p>
                <p><strong>Date:</strong> {{review_date}}</p>
                <p>{{review_content}}</p>
            </div>
        {{/each}}
    {{else}}
        <p class="text-muted">No reviews available for this movie.</p>
    {{/if}}
</div>
