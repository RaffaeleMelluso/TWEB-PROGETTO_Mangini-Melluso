<!--
    Movie Details Layout

    This template displays detailed information about a selected movie.
    It includes the movie title, release year, tagline, description, rating,
    directors, studios, actors, production countries, and available languages.
    Additionally, it provides a review submission form for users.
-->

<div class="container my-5">
    <!-- Movie Title and Year -->
    <h2 class="text-center text-success" id="filmName">{{movie.name}}</h2>
    <h2 class="text-center text-success">({{movie.year}})</h2>
    <p class="text-center text-muted">{{movie.tagline}}</p>

    <!-- Movie Image and Details Section -->
    <div class="row my-4 border-bottom pb-4">
        <div class="col-md-6 d-flex align-items-stretch mb-4">
            <div class="card w-100">
                <img src="{{movie.image}}" alt="{{movie.name}}" class="card-img-top" style="object-fit: cover;">
            </div>
        </div>
        <div class="col-md-6 mb-4 d-flex flex-column justify-content-between">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title text-success">Descrizione</h5>
                    <p class="card-text">{{movie.description}}</p>
                    <h5 class="card-title text-success">Rating</h5>
                    <p class="card-text">{{movie.rating}}</p>
                    <h5 class="card-title text-success">Regista/i</h5>
                    <ul>
                        {{#each movie.directors}}
                            <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Studios, Actors, Countries, and Languages Section -->
    <div class="row my-4 border-bottom pb-4">
        <div class="col-12 mb-4">
            <!-- Studios -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title text-info">Studios</h5>
                    <div class="row">
                        {{#each movie.studios}}
                            <div class="col-md-3 mb-3 border-end border-bottom">
                                <p>{{this}}</p>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>

            <!-- Actors -->
            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title text-info">Attori</h5>
                    <div class="row">
                        {{#each movie.actors}}
                            <div class="col-md-3 mb-3 border-end border-bottom">
                                <p>{{this.name}} - {{this.role}}</p>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>

            <!-- Production Countries -->
            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title text-info">Paesi di Produzione</h5>
                    <ul>
                        {{#each movie.countries}}
                            <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>

            <!-- Available Languages -->
            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title text-info">Lingue Disponibili</h5>
                    <ul>
                        {{#each movie.languages}}
                            <li>{{this.language}} ({{this.type}})</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Review Submission Form -->
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title text-info">Aggiungi una Recensione</h5>
            <form id="reviewForm">
                <div class="mb-3">
                    <label for="criticName" class="form-label">Nome del Critico</label>
                    <input type="text" id="criticName" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="reviewScorePercentage" class="form-label">Punteggio Percentuale</label>
                    <input type="number" id="reviewScorePercentage" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="reviewContent" class="form-label">Contenuto della Recensione</label>
                    <textarea id="reviewContent" class="form-control" rows="3" required></textarea>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="topCritic">
                    <label class="form-check-label" for="topCritic">Top Critic</label>
                </div>
                <button type="submit" class="btn btn-primary">Invia</button>
            </form>
        </div>
    </div>
</div>
