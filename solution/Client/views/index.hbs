<!--
    Rotten Cucumber - Home Page

    This template renders the homepage of the Rotten Cucumber application.
    It includes a carousel to showcase the latest movie releases and a feature
    section highlighting top-rated films. The page dynamically updates based
    on the available movie data.
-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rotten Cucumber</title>

    <!-- Bootstrap for responsive styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/styles.css">
</head>
<body>

{{> navbar}}

<main class="container">
    <!-- Header Section -->
    <div class="carousel-titles text-center my-5">
        <h1>Scopri gli ultimi film</h1>
        <h2>E lasciati soprendere!</h2>
    </div>

    <!-- Movie Carousel: Displays the latest movie releases -->
    {{#if carousel.length}}
        <div id="movieCarousel" class="carousel slide my-4 mx-auto" data-bs-ride="carousel" style="max-width: 900px;">
            <div class="carousel-indicators">
                {{#each carousel}}
                    <button type="button" data-bs-target="#movieCarousel" data-bs-slide-to="{{@index}}" class="{{#if @first}}active{{/if}}" aria-current="{{#if @first}}true{{/if}}" aria-label="Slide {{@index}}"></button>
                {{/each}}
            </div>
            <div class="carousel-inner">
                {{#each carousel}}
                    <div class="carousel-item {{#if @first}}active{{/if}}">
                        <a href="/film/{{this.id}}">
                            <img src="{{this.image}}" class="d-block w-100 img-fluid" alt="{{this.alt}}">
                        </a>
                    </div>
                {{/each}}
            </div>

            <!-- Carousel Navigation Buttons -->
            <button class="carousel-control-prev" type="button" data-bs-target="#movieCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#movieCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    {{else}}
        <p class="text-center">No movies available for the carousel.</p>
    {{/if}}

    <!-- Feature Section: Highlights top-rated movies -->
    <div class="features-titles my-5">
        <h1>Scopri quali sono i migliori film!</h1>
    </div>

    <div class="container feature-section">
        <div class="row text-center">
            {{#each features}}
                <div class="col-12 col-md-4">
                    <div class="card">
                        <a href="/film/{{id}}" class="text-decoration-none">
                            <img class="rounded-circle mb-3 img-fluid" src="{{poster}}" alt="{{name}}">
                            <h2>{{name}}</h2>
                        </a>
                        <p>{{description}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</main>

{{> footer}}

<!-- Bootstrap and Axios for interactive components -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<!-- Google Fonts for improved typography -->
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Raleway:wght@300;400;600&family=Cinzel:wght@400;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">

</body>
</html>