{
	"swagger": "2.0",
	"info": {
		"description": "API documentation",
		"version": "1.0.0",
		"title": "API"
	},
	"host": "localhost:3000",
	"basePath": "/",
	"tags": [
		{
			"name": "movies",
			"description": "Operations about movies"
		}
	],
	"paths": {
		"/movies/details/1000034": {
			"get": {
				"tags": ["movies"],
				"summary": "Get movie details",
				"description": "Returns movie details for a given ID",
				"operationId": "getMovieDetails",
				"produces": ["application/json"],
				"responses": {
					"200": {
						"description": "successful operation",
						"schema": {
							"$ref": "#/definitions/Movie"
						}
					}
				}
			}
		},
		"/movies/search": {
			"get": {
				"tags": ["movies"],
				"summary": "Search movies",
				"description": "Search movies by name and genre",
				"operationId": "searchMovies",
				"produces": ["application/json"],
				"parameters": [
					{
						"name": "name",
						"in": "query",
						"description": "Name of the movie",
						"required": false,
						"type": "string"
					},
					{
						"name": "genre",
						"in": "query",
						"description": "Genre of the movie",
						"required": false,
						"type": "string"
					}
				],
				"responses": {
					"200": {
						"description": "successful operation",
						"schema": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/Movie"
							}
						}
					}
				}
			}
		},
		"/reviews/film/1000034/reviews": {
			"post": {
				"tags": ["reviews"],
				"summary": "Add a review",
				"description": "Add a review for a specific film",
				"operationId": "addReview",
				"consumes": ["application/json"],
				"produces": ["application/json"],
				"parameters": [
					{
						"in": "body",
						"name": "body",
						"description": "Review object that needs to be added",
						"required": true,
						"schema": {
							"$ref": "#/definitions/Review"
						}
					}
				],
				"responses": {
					"201": {
						"description": "Review created"
					}
				}
			}
		}
	},
	"definitions": {
		"Movie": {
			"type": "object",
			"properties": {
				"id": {
					"type": "integer",
					"format": "int64"
				},
				"name": {
					"type": "string"
				},
				"year": {
					"type": "integer",
					"format": "int32"
				},
				"description": {
					"type": "string"
				},
				"rating": {
					"type": "number",
					"format": "float"
				},
				"poster": {
					"type": "string"
				}
			}
		},
		"Review": {
			"type": "object",
			"properties": {
				"critic_name": {
					"type": "string"
				},
				"review_score_percentage": {
					"type": "integer",
					"format": "int32"
				},
				"review_content": {
					"type": "string"
				},
				"top_critic": {
					"type": "boolean"
				},
				"review_date": {
					"type": "string",
					"format": "date"
				},
				"movie_title": {
					"type": "string"
				},
				"rotten_tomatoes_link": {
					"type": "string"
				}
			}
		}
	}
}