{
	"openapi": "3.0.2",
	"info": {
		"title": "Server Dinamico Mongo",
		"version": "1.0"
	},
	"servers": [
		{
			"url": "http://localhost:3002"
		},
		{
			"url": "http://localhost:3000"
		}
	],
	"paths": {
		"/reviews/film/{id}/reviews": {
			"get": {
				"summary": "Get reviews by film ID",
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						},
						"description": "ID of the film to get reviews for"
					}
				],
				"responses": {
					"200": {
						"description": "A list of reviews",
						"content": {
							"application/json": {
								"examples": {
									"example-1": {
										"summary": "Sample response",
										"value": [
											{
												"rotten_tomatoes_link": "m/0814255",
												"movie_title": "Film Name",
												"critic_name": "Critic Name",
												"top_critic": true,
												"publisher_name": "Publisher",
												"review_type": "Type",
												"review_score": "Score",
												"review_score_percentage": 85,
												"review_date": "2023-10-01",
												"review_content": "Review content"
											}
										]
									}
								}
							}
						}
					},
					"404": {
						"description": "Film not found"
					},
					"500": {
						"description": "Error retrieving reviews"
					}
				}
			}
		}
	}
}